{
  "compilerOptions": {
    // Basic
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",

    // Type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Node.js types
    "types": ["node"],

    // Output and debugging
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Module settings
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,

    // Skip library checks for faster build
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
